<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgrey"
    android:orientation="vertical"
    tools:context=".ProfileFragment">

    <!--Top Header Layout-->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_below="@+id/topbar"
        tools:ignore="UnknownId">


            <!--Bootom Cards with sections-->
            <LinearLayout
                android:id="@+id/personalinfo"
                android:layout_width="match_parent"
                android:layout_height="644dp"
                android:layout_margin="12dp"
                android:orientation="vertical">

                <!--About Me Card-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/fragment_profile_border_design"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="About Me"
                                style="@style/TextAppearance.MaterialComponents.Headline6"
                                 />

                            <Space
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="10dp"
                                android:layout_marginRight="10dp"
                                android:text="Edit"
                                android:textColor="@color/yellow"
                                style="@style/TextAppearance.MaterialComponents.Subtitle1" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="So basically, it means that the LayoutManager is layouting the list in a chosen way. In this example weâ€™ve used LinearLayoutManager which shows the data in a simple list" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/fragment_profile_border_design"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/personalinfobtn"
                        android:layout_width="207dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:padding="15dp"
                        android:text="Contest Participated"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        style="@style/TextAppearance.MaterialComponents.Subtitle1"
                        />

                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/lightgrey" />


                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="47dp"
                        android:layout_marginTop="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="10"
                        style="@style/TextAppearance.MaterialComponents.Subtitle1"
                        android:textStyle="normal" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/fragment_profile_border_design"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="115dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"

                        android:padding="15dp"
                        android:text="MIC Coins"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/lightgrey" />


                    <TextView

                        style="@style/TextAppearance.MaterialComponents.Subtitle1"
                        android:layout_width="149dp"
                        android:layout_height="47dp"
                        android:layout_marginTop="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="1000"
                        android:textStyle="normal" />

                </LinearLayout>
                <!--Contact Details-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/fragment_profile_border_design"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contact"
                            style="@style/TextAppearance.MaterialComponents.Headline6"
                            android:textStyle="bold" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_marginRight="10dp"
                            android:text="Edit"
                            android:textColor="#FFCF66"
                            style="@style/TextAppearance.MaterialComponents.Headline6" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingRight="8dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/fragment_profile_border_design"
                                android:padding="10dp"
                                android:src="@drawable/ic_account_circle" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:text="+91 7999193854"
                                android:textColor="@color/grey"
                                style="@style/TextAppearance.MaterialComponents.Subtitle1" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical"
                            android:paddingRight="8dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/fragment_profile_border_design"
                                android:padding="10dp"
                                android:src="@drawable/ic_account_circle" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:text="prernay@gmail.com"
                                android:textColor="@color/grey"
                                style="@style/TextAppearance.MaterialComponents.Subtitle1" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical"
                            android:paddingRight="8dp"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/fragment_profile_border_design"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="left"
                        android:padding="15dp"
                        android:text="Social Links"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        style="@style/TextAppearance.MaterialComponents.Subtitle1"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/lightgrey" />

            </LinearLayout>

        </LinearLayout>


    </ScrollView>


</RelativeLayout>